<script>
    import Quill from 'quill';

    let currentDate = new Date();
    let eventsData = [];
    let quillExams, quillEvents;

    function initQuill() {
        const toolbarOptions = [
            ['bold', 'italic', 'underline', 'strike'],
            [{ 'list': 'ordered'}, { 'list': 'bullet' }],
            [{ 'header': [1, 2, 3, false] }],
            [{ 'color': [] }],
            ['link', 'clean']
        ];

        quillExams = new Quill('#editor-exams', {
            theme: 'snow',
            placeholder: 'Detalles del examen...',
            modules: { toolbar: toolbarOptions }
        });

        quillEvents = new Quill('#editor-events', {
            theme: 'snow',
            placeholder: 'Detalles del evento...',
            modules: { toolbar: toolbarOptions }
        });
    }

    async function loadEvents() {
        try {
            const res = await fetch('/api/calendar');
            eventsData = await res.json();
            renderCalendar();
        } catch (e) {
            console.error("Error loading events", e);
        }
    }

    function renderCalendar() {
        const tbody = document.getElementById('admin-calendar-body');
        const monthDisplay = document.getElementById('current-month-display');
        
        if (!tbody || !monthDisplay) return;

        const year = currentDate.getFullYear();
        const month = currentDate.getMonth();

        monthDisplay.textContent = new Date(year, month).toLocaleDateString('es-ES', { month: 'long', year: 'numeric' });

        const daysInMonth = new Date(year, month + 1, 0).getDate();
        const firstDay = new Date(year, month, 1).getDay(); // 0 = Sunday
        const adjustedFirstDay = firstDay === 0 ? 6 : firstDay - 1; // 0 = Monday

        tbody.innerHTML = '';
        
        let currentDay = 1;
        let row = document.createElement('tr');
        let dayCount = 0;

        for (let i = 0; i < adjustedFirstDay; i++) {
            const cell = document.createElement('td');
            cell.className = 'dia-vacio';
            row.appendChild(cell);
            dayCount++;
        }

        while (currentDay <= daysInMonth) {
            if (dayCount === 7) {
                tbody.appendChild(row);
                row = document.createElement('tr');
                dayCount = 0;
            }

            const dateStr = `${year}-${String(month + 1).padStart(2, '0')}-${String(currentDay).padStart(2, '0')}`;
            const dayEvents = eventsData.filter(e => e.date === dateStr);
            const hasExam = dayEvents.some(e => e.type === 'exam');
            const hasEvent = dayEvents.some(e => e.type === 'event');
            
            const cell = document.createElement('td');
            let className = 'dia';
            if (hasExam) className += ' tiene-examen';
            else if (hasEvent) className += ' tiene-evento';
            
            cell.className = className;

            let content = `<div class="numero-dia">${currentDay}</div>`;
            
            if (dayEvents.length > 0) {
                 content += `<div class="examen-info">`;
                 dayEvents.slice(0, 2).forEach(ev => {
                     const text = ev.type === 'exam' ? ev.subject : ev.title;
                     content += `<div class="asignatura">${text}</div>`;
                 });
                 if (dayEvents.length > 2) content += `<div class="asignatura">+${dayEvents.length - 2}</div>`;
                 content += `</div>`;

                 // Hover Overlay with icons
                 content += `
                    <div class="dia-overlay">
                        <button class="overlay-btn btn-edit-cal" onclick="editCalendarItem('${dayEvents[0].id}')" title="Editar">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </button>
                        <button class="overlay-btn btn-delete-cal" onclick="deleteEvent('${dayEvents[0].id}')" title="Borrar">
                            <i class="fa-solid fa-trash"></i>
                        </button>
                    </div>
                 `;
            }

            cell.innerHTML = content;
            row.appendChild(cell);
            currentDay++;
            dayCount++;
        }

        while (dayCount < 7 && dayCount > 0) {
            const cell = document.createElement('td');
            cell.className = 'dia-vacio';
            row.appendChild(cell);
            dayCount++;
        }
        if (row.children.length > 0) tbody.appendChild(row);
    }

    (window as any).editCalendarItem = (id) => {
        const item = eventsData.find(e => e.id === id);
        if (!item) return;

        if (item.type === 'exam') {
            (document.getElementById('tab-btn-exams') as HTMLButtonElement).click();
            (document.getElementById('exam-id') as HTMLInputElement).value = item.id;
            (document.getElementById('exam-date') as HTMLInputElement).value = item.date;
            (document.getElementById('exam-subject') as HTMLSelectElement).value = item.subject;
            (document.getElementById('exam-time') as HTMLInputElement).value = item.time || '';
            (document.getElementById('exam-classroom') as HTMLInputElement).value = item.classroom || 'B1B';
            quillExams.root.innerHTML = item.details || '';
            
            document.getElementById('exam-form-title').textContent = "Editar Examen";
            document.getElementById('exam-submit-btn').textContent = "Actualizar Examen";
            document.getElementById('cancel-exam-edit').classList.remove('hidden');
        } else {
            (document.getElementById('tab-btn-events') as HTMLButtonElement).click();
            (document.getElementById('event-id') as HTMLInputElement).value = item.id;
            (document.getElementById('event-date') as HTMLInputElement).value = item.date;
            (document.getElementById('event-title') as HTMLInputElement).value = item.title;
            (document.getElementById('event-time') as HTMLInputElement).value = item.time || '';
            quillEvents.root.innerHTML = item.details || '';

            document.getElementById('event-form-title').textContent = "Editar Evento";
            document.getElementById('event-submit-btn').textContent = "Actualizar Evento";
            document.getElementById('cancel-event-edit').classList.remove('hidden');
        }
        window.scrollTo({ top: 0, behavior: 'smooth' });
    };

    function resetExamsForm() {
        const form = document.getElementById('exam-form') as HTMLFormElement;
        form.reset();
        (document.getElementById('exam-id') as HTMLInputElement).value = '';
        quillExams.setContents([]);
        document.getElementById('exam-form-title').textContent = "A침adir Examen";
        document.getElementById('exam-submit-btn').textContent = "A침adir Examen";
        document.getElementById('cancel-exam-edit').classList.add('hidden');
    }

    function resetEventsForm() {
        const form = document.getElementById('event-form') as HTMLFormElement;
        form.reset();
        (document.getElementById('event-id') as HTMLInputElement).value = '';
        quillEvents.setContents([]);
        document.getElementById('event-form-title').textContent = "A침adir Evento";
        document.getElementById('event-submit-btn').textContent = "A침adir Evento";
        document.getElementById('cancel-event-edit').classList.add('hidden');
    }

    async function deleteEvent(id) {
        if (!confirm("쮹orrar este elemento?")) return;

        try {
            const res = await fetch('/api/calendar', {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id })
            });

            if (res.ok) {
                loadEvents();
            } else {
                alert("Error al borrar");
            }
        } catch (e) {
            alert("Error de conexi칩n");
        }
    }
    (window as any).deleteEvent = deleteEvent;

    function setupTabs() {
        const tabs = document.querySelectorAll('.tab-btn');
        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                document.querySelectorAll('.tab-btn').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                
                tab.classList.add('active');
                document.getElementById(`tab-${(tab as HTMLElement).dataset.tab}`).classList.add('active');
            });
        });
    }

    async function handleFormSubmit(e) {
        e.preventDefault();
        const form = e.target;
        
        if (form.id === 'exam-form') {
            document.getElementById('hidden-details-exams').value = quillExams.root.innerHTML;
        } else if (form.id === 'event-form') {
            document.getElementById('hidden-details-events').value = quillEvents.root.innerHTML;
        }

        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        
        try {
            const res = await fetch('/api/calendar', {
                method: data.id ? 'PATCH' : 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            if (res.ok) {
                if (form.id === 'exam-form') resetExamsForm();
                else resetEventsForm();
                
                loadEvents();
                alert("Guardado correctamente");
            } else {
                alert("Error al guardar");
            }
        } catch (e) {
            alert("Error de conexi칩n");
        }
    }

