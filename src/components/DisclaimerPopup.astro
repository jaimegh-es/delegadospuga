<div id="disclaimer-popup" class="disclaimer-popup hidden">
    <div class="disclaimer-content glass">
        <div class="icon-container">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="icon"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M12 9v2m0 4v.01"></path>
                <path
                    d="M5 19h14a2 2 0 0 0 1.84 -2.75l-7.1 -12.25a2 2 0 0 0 -3.5 0l-7.1 12.25a2 2 0 0 0 1.75 2.75"
                ></path>
            </svg>
        </div>
        <h3>Aviso Legal</h3>
        <p>
            Esta página es un <strong>proyecto personal</strong> y debe tomarse solo
            para referencia. No está vinculada a ninguna institución educativa.
        </p>
        <p class="links">
            Puedes consultar nuestros <a href="/terms">Términos y Condiciones</a
            > y <a href="/legal">Aviso Legal</a> para más información.
        </p>
        <div class="actions">
            <button id="btn-close" class="btn-secondary">Cerrar</button>
            <button id="btn-dont-show" class="btn-primary"
                >Cerrar y no volver a preguntar</button
            >
        </div>
    </div>
</div>

<style>
    .disclaimer-popup {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(4px);
        padding: 1rem;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s ease;
    }

    .disclaimer-popup.show {
        opacity: 1;
        pointer-events: auto;
    }

    .disclaimer-popup.hidden {
        display: none;
    }

    .glass {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 1.5rem;
        padding: 2.5rem;
        max-width: 500px;
        width: 100%;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        text-align: center;
        transform: translateY(20px);
        transition: transform 0.3s ease;
    }

    .disclaimer-popup.show .glass {
        transform: translateY(0);
    }

    /* Dark mode support */
    @media (prefers-color-scheme: dark) {
        .glass {
            background: rgba(30, 30, 30, 0.9);
            border-color: rgba(255, 255, 255, 0.1);
            color: #fff;
        }
    }

    .icon-container {
        background: rgba(255, 179, 0, 0.15);
        width: 64px;
        height: 64px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }

    .icon {
        width: 32px;
        height: 32px;
        color: #ffb300;
    }

    h3 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: var(--color-text, #1a1a1a);
    }

    @media (prefers-color-scheme: dark) {
        h3 {
            color: #fff;
        }
    }

    p {
        color: var(--color-text-light, #666);
        line-height: 1.6;
        margin-bottom: 1rem;
    }

    @media (prefers-color-scheme: dark) {
        p {
            color: #ccc;
        }
    }

    .links {
        font-size: 0.9rem;
        margin-bottom: 2rem;
    }

    .links a {
        color: var(--accent-color, #3b82f6);
        text-decoration: none;
        transition: color 0.2s;
    }

    .links a:hover {
        text-decoration: underline;
    }

    .actions {
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
    }

    button {
        padding: 0.8rem 1.5rem;
        border-radius: 0.8rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        border: none;
        font-size: 1rem;
    }

    .btn-primary {
        background: var(
            --accent-gradient,
            linear-gradient(135deg, #3b82f6 0%, #2563eb 100%)
        );
        color: white;
        box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(37, 99, 235, 0.3);
    }

    .btn-secondary {
        background: transparent;
        border: 1px solid rgba(0, 0, 0, 0.1);
        color: #666;
    }

    @media (prefers-color-scheme: dark) {
        .btn-secondary {
            border-color: rgba(255, 255, 255, 0.2);
            color: #ccc;
        }
    }

    .btn-secondary:hover {
        background: rgba(0, 0, 0, 0.05);
    }

    @media (prefers-color-scheme: dark) {
        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.05);
        }
    }

    @media (min-width: 640px) {
        .actions {
            flex-direction: row;
            justify-content: center;
        }
    }
</style>

<script>
    const POPUP_STORAGE_KEY = "delegados_disclaimer_viewed";

    function initPopup() {
        const popup = document.getElementById("disclaimer-popup");
        const closeBtn = document.getElementById("btn-close");
        const dontShowBtn = document.getElementById("btn-dont-show");

        if (!popup || !closeBtn || !dontShowBtn) return;

        // Check if user has already dismissed permanently
        const hasViewed = localStorage.getItem(POPUP_STORAGE_KEY);

        if (!hasViewed) {
            // Small delay for better UX
            setTimeout(() => {
                popup.classList.remove("hidden");
                // Force reflow
                void popup.offsetWidth;
                popup.classList.add("show");
            }, 1000);
        }

        function closePopup(permanent = false) {
            popup?.classList.remove("show");
            setTimeout(() => {
                popup?.classList.add("hidden");
            }, 300);

            if (permanent) {
                localStorage.setItem(POPUP_STORAGE_KEY, "true");
            }
        }

        closeBtn.addEventListener("click", () => closePopup(false));
        dontShowBtn.addEventListener("click", () => closePopup(true));
    }

    // Run on page load
    document.addEventListener("astro:page-load", initPopup);
    // Also run immediately in case view transitions aren't used or for initial load
    initPopup();
</script>
