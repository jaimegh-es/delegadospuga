---
<div class="admin-card">
  <h3>Gestión de Usuarios (Admin)</h3>
  
  <div class="config-section mb-6 p-4 bg-gray-50 rounded-lg border border-gray-200 space-y-4">
      <h4 class="font-bold text-gray-700">Configuración General</h4>
      
      <div class="flex items-center justify-between">
          <span class="text-sm text-gray-600">Mostrar Solicitudes Públicas en Dashboard</span>
          <label class="switch">
              <input type="checkbox" id="toggle-requests">
              <span class="slider round"></span>
          </label>
      </div>

      <div class="flex items-center justify-between border-t border-gray-200 pt-4">
          <span class="text-sm text-gray-600 font-semibold text-red-600">Bloquear acceso a usuarios (Mantenimiento)</span>
          <label class="switch">
              <input type="checkbox" id="toggle-maintenance">
              <span class="slider round bg-gray-300"></span>
          </label>
      </div>
  </div>

  <div class="table-responsive">
      <table class="users-table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Rol</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody id="users-table-body">
            <tr><td colspan="4" class="loading-text">Cargando usuarios...</td></tr>
        </tbody>
      </table>
  </div>
</div>

<style>
  .admin-card {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    border: 1px solid #fee2e2;
  }

  h3 {
    color: #991b1b;
    font-weight: 700;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
  }

  .table-responsive {
    overflow-x: auto;
  }

  .users-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.9rem;
  }

  .users-table th {
    text-align: left;
    padding: 0.75rem;
    background: #f9fafb;
    border-bottom: 2px solid #e5e7eb;
    color: #374151;
    font-weight: 600;
  }

  .users-table td {
    padding: 0.75rem;
    border-bottom: 1px solid #f3f4f6;
    color: #4b5563;
  }

  .users-table tr:last-child td {
    border-bottom: none;
  }

  .loading-text {
    text-align: center;
    padding: 2rem;
    color: #6b7280;
    font-style: italic;
  }

  .ban-btn {
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-weight: 600;
    font-size: 0.75rem;
    border: none;
    cursor: pointer;
    transition: background 0.2s;
    color: white;
  }
  
  .btn-ban { background: #ef4444; }
  .btn-ban:hover { background: #dc2626; }
  
  .btn-unban { background: #10b981; }
  .btn-unban:hover { background: #059669; }

  .status-badge {
    padding: 0.1rem 0.5rem;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 600;
  }
  .status-active { background: #d1fae5; color: #065f46; }
  .status-banned { background: #fee2e2; color: #991b1b; }

  /* Switch Styles */
  .switch {
    position: relative;
    display: inline-block;
    width: 48px;
    height: 24px;
  }
  .switch input { opacity: 0; width: 0; height: 0; }
  .slider {
    position: absolute;
    cursor: pointer;
    top: 0; left: 0; right: 0; bottom: 0;
    background-color: #ccc;
    transition: .4s;
    border-radius: 34px;
  }
  .slider:before {
    position: absolute;
    content: "";
    height: 18px;
    width: 18px;
    left: 3px;
    bottom: 3px;
    background-color: white;
    transition: .4s;
    border-radius: 50%;
  }
  input:checked + .slider { background-color: #2000ad; }
  input:checked + .slider:before { transform: translateX(24px); }
</style>

<script>
  // Load Config
  async function loadConfig() {
    const toggleReq = document.getElementById('toggle-requests') as HTMLInputElement;
    const toggleMaint = document.getElementById('toggle-maintenance') as HTMLInputElement;
    
    if(!toggleReq || !toggleMaint) return;

    try {
        const res = await fetch('/api/settings');
        const data = await res.json();
        
        toggleReq.checked = !!data.showRequests;
        toggleMaint.checked = !!data.blockNonAdmins;
        
        const saveSettings = async () => {
            try {
                await fetch('/api/settings', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ 
                        showRequests: toggleReq.checked,
                        blockNonAdmins: toggleMaint.checked 
                    })
                });
            } catch(e) {
                alert("Error guardando configuración");
            }
        };

        toggleReq.addEventListener('change', saveSettings);
        toggleMaint.addEventListener('change', saveSettings);

    } catch(e) {
        console.error("Error loading settings");
    }
  }

  async function loadUsers() {
    const tbody = document.getElementById('users-table-body');
    if (!tbody) return;

    try {
      const res = await fetch('/api/users');
      if (!res.ok) throw new Error();
      
      const users = await res.json();
      
      if (users.length === 0) {
        tbody.innerHTML = '<tr><td colspan="4" class="text-center py-4">No hay usuarios registrados.</td></tr>';
        return;
      }

      tbody.innerHTML = users.map((u: any) => `
        <tr>
            <td class="font-medium text-gray-900">${u.email}</td>
            <td>${u.role}</td>
            <td>
                <span class="status-badge ${u.banned ? 'status-banned' : 'status-active'}">
                    ${u.banned ? 'Baneado' : 'Activo'}
                </span>
            </td>
            <td>
                ${u.role !== 'admin' ? `
                    <button 
                        onclick="toggleBan('${u.uid}', ${!u.banned})"
                        class="ban-btn ${u.banned ? 'btn-unban' : 'btn-ban'}"
                    >
                        ${u.banned ? 'Desbanear' : 'Banear'}
                    </button>
                ` : '<span class="text-xs text-gray-400">N/A</span>'}
            </td>
        </tr>
      `).join('');

    } catch (e) {
      tbody.innerHTML = '<tr><td colspan="4" class="text-center text-red-500 py-4">Error cargando usuarios.</td></tr>';
    }
  }

  // Expose function to window for the onclick handler
  (window as any).toggleBan = async (uid: string, ban: boolean) => {
    if(!confirm(ban ? "¿Banear usuario?" : "¿Desbanear usuario?")) return;

    try {
        const res = await fetch('/api/users', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({ uid, ban })
        });
        if(res.ok) {
            loadUsers(); // Reload list
        } else {
            alert("Error al actualizar usuario");
        }
    } catch(e) {
        alert("Error de conexión");
    }
  };

  // Load on mount
  loadConfig();
  loadUsers();
</script>
