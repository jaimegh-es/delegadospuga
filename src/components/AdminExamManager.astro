<script>
    import Quill from 'quill';

    let currentDate = new Date();
    let eventsData = [];
    let quillExams;

    function initQuill() {
        const toolbarOptions = [
            ['bold', 'italic', 'underline', 'strike'],
            [{ 'list': 'ordered'}, { 'list': 'bullet' }],
            [{ 'header': [1, 2, 3, false] }],
            [{ 'color': [] }],
            ['link', 'clean']
        ];

        quillExams = new Quill('#editor-exams', {
            theme: 'snow',
            placeholder: 'Detalles del examen...',
            modules: { toolbar: toolbarOptions }
        });
    }

    async function loadExams() {
        try {
            const res = await fetch('/api/calendar');
            const allData = await res.json();
            eventsData = allData.filter(e => e.type === 'exam');
            renderCalendar();
        } catch (e) {
            console.error("Error loading exams", e);
        }
    }

    function renderCalendar() {
        const tbody = document.getElementById('admin-exam-calendar-body');
        const monthDisplay = document.getElementById('current-month-display-exams');
        
        if (!tbody || !monthDisplay) return;

        const year = currentDate.getFullYear();
        const month = currentDate.getMonth();

        monthDisplay.textContent = new Date(year, month).toLocaleDateString('es-ES', { month: 'long', year: 'numeric' });

        const daysInMonth = new Date(year, month + 1, 0).getDate();
        const firstDay = new Date(year, month, 1).getDay();
        const adjustedFirstDay = firstDay === 0 ? 6 : firstDay - 1;

        tbody.innerHTML = '';
        
        let currentDay = 1;
        let row = document.createElement('tr');
        let dayCount = 0;

        for (let i = 0; i < adjustedFirstDay; i++) {
            const cell = document.createElement('td');
            cell.className = 'dia-vacio';
            row.appendChild(cell);
            dayCount++;
        }

        while (currentDay <= daysInMonth) {
            if (dayCount === 7) {
                tbody.appendChild(row);
                row = document.createElement('tr');
                dayCount = 0;
            }

            const dateStr = `${year}-${String(month + 1).padStart(2, '0')}-${String(currentDay).padStart(2, '0')}`;
            const dayExams = eventsData.filter(e => e.date === dateStr);
            const hasExam = dayExams.length > 0;
            
            const cell = document.createElement('td');
            cell.className = hasExam ? 'dia tiene-examen' : 'dia';
            
            if (hasExam) {
                cell.addEventListener('click', () => {
                    if (window.matchMedia("(hover: none)").matches) {
                        openMobileActionBar(dayExams[0].id);
                    }
                });
            }

            let content = `<div class="numero-dia">${currentDay}</div>`;
            
            if (hasExam) {
                 content += `<div class="examen-info">`;
                 dayExams.slice(0, 2).forEach(ev => {
                     content += `<div class="asignatura">${ev.subject}</div>`;
                 });
                 if (dayExams.length > 2) content += `<div class="asignatura">+${dayExams.length - 2}</div>`;
                 content += `</div>`;

                 content += `
                    <div class="dia-overlay">
                        <button class="overlay-btn btn-edit-cal" onclick="event.stopPropagation(); editExamItem('${dayExams[0].id}')" title="Editar">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </button>
                        <button class="overlay-btn btn-delete-cal" onclick="event.stopPropagation(); deleteExamItem('${dayExams[0].id}')" title="Borrar">
                            <i class="fa-solid fa-trash"></i>
                        </button>
                    </div>
                 `;
            }

            cell.innerHTML = content;
            row.appendChild(cell);
            currentDay++;
            dayCount++;
        }

        while (dayCount < 7 && dayCount > 0) {
            const cell = document.createElement('td');
            cell.className = 'dia-vacio';
            row.appendChild(cell);
            dayCount++;
        }
        if (row.children.length > 0) tbody.appendChild(row);
    }

    let selectedId = null;
    const mobileBar = document.getElementById('mobile-action-bar-exams');

    function openMobileActionBar(id) {
        selectedId = id;
        mobileBar.classList.add('active');
    }

    function closeMobileActionBar() {
        mobileBar.classList.remove('active');
        selectedId = null;
    }

    (window as any).editExamItem = (id) => {
        closeMobileActionBar();
        const item = eventsData.find(e => e.id === id);
        if (!item) return;

        (document.getElementById('exam-id') as HTMLInputElement).value = item.id;
        (document.getElementById('exam-date') as HTMLInputElement).value = item.date;
        (document.getElementById('exam-subject') as HTMLSelectElement).value = item.subject;
        (document.getElementById('exam-time') as HTMLInputElement).value = item.time || '';
        (document.getElementById('exam-classroom') as HTMLInputElement).value = item.classroom || 'B1B';
        quillExams.root.innerHTML = item.details || '';
        
        document.getElementById('exam-form-title').textContent = "Editar Examen";
        document.getElementById('exam-submit-btn').textContent = "Actualizar Examen";
        document.getElementById('cancel-exam-edit').classList.remove('hidden');
        
        window.scrollTo({ top: document.getElementById('exam-manager-content').offsetTop - 100, behavior: 'smooth' });
    };

    function resetExamsForm() {
        const form = document.getElementById('exam-form') as HTMLFormElement;
        form.reset();
        (document.getElementById('exam-id') as HTMLInputElement).value = '';
        quillExams.setContents([]);
        document.getElementById('exam-form-title').textContent = "A침adir Examen";
        document.getElementById('exam-submit-btn').textContent = "A침adir Examen";
        document.getElementById('cancel-exam-edit').classList.add('hidden');
    }

    async function deleteExamItem(id) {
        if (!confirm("쮹orrar este examen?")) return;

        try {
            const res = await fetch('/api/calendar', {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id })
            });

            if (res.ok) {
                closeMobileActionBar();
                loadExams();
            } else {
                alert("Error al borrar");
            }
        } catch (e) {
            alert("Error de conexi칩n");
        }
    }
    (window as any).deleteExamItem = deleteExamItem;

    async function handleFormSubmit(e) {
        e.preventDefault();
        const form = e.target;
        document.getElementById('hidden-details-exams').value = quillExams.root.innerHTML;

        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        
        try {
            const res = await fetch('/api/calendar', {
                method: data.id ? 'PATCH' : 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            if (res.ok) {
                resetExamsForm();
                loadExams();
                alert("Examen guardado correctamente");
            } else {
                alert("Error al guardar");
            }
        } catch (e) {
            alert("Error de conexi칩n");
        }
    }

    // Legacy Import Logic (Exam Specific)
    const legacyExams = {
        "2026-01-14": [{ asignatura: "Recuperaci칩n Lengua", hora: "", aula: "B1B", detalles: "Recuperaci칩n examen de Lengua." }],
        "2026-01-21": [{ asignatura: "Recuperaci칩n Lengua", hora: "", aula: "B1B", detalles: "Recuperaci칩n examen de Lengua." }],
        "2026-01-16": [{ asignatura: "Recuperaci칩n Gallego", hora: "", aula: "B1B", detalles: "Recuperaci칩n examen de Gallego." }],
        "2026-01-23": [{ asignatura: "Recuperaci칩n Qu칤mica", hora: "", aula: "B1B", detalles: "Para recuperar la parte de qu칤mica." }],
        "2026-02-05": [{ asignatura: "Examen libro gallego", hora: "", aula: "B1B", detalles: `<p>El libro es <strong>'As malas mulleres'</strong>, de <em>Marilar Alexandre</em>.</p>` }],
        "2026-01-28": [{ asignatura: "Examen Mate", hora: "", aula: "B1B", detalles: `<p>Lo que cae:</p><a href="/materia.ex.mate.28.pdf" target="_blank" class="btn">游닄 Descargar PDF con la materia del examen</a>` }],
        "2026-01-30": [{ asignatura: "Examen Mate", hora: "", aula: "B1B", detalles: `<p>Lo que cae:</p><a href="/materia.ex.mate.28.pdf" target="_blank" class="btn">游닄 Descargar PDF con la materia del examen</a>` }],
        "2026-02-24": [{ asignatura: "Global Qu칤mica", hora: "", aula: "B1B", detalles: "Pr칩ximamente lo que cae." }],
        "2026-02-25": [{ asignatura: "Global Qu칤mica", hora: "", aula: "B1B", detalles: "Pr칩ximamente lo que cae." }],
        "2026-02-12": [{ asignatura: "Examen Gallego 1", hora: "", aula: "B1B", detalles: "Pr칩ximamente lo que cae." }],
        "2026-03-03": [{ asignatura: "Examen F칤sica", hora: "", aula: "B1B", detalles: "Pr칩ximamente lo que cae." }],
        "2026-03-06": [{ asignatura: "Examen Gallego 2", hora: "", aula: "B1B", detalles: "Pr칩ximamente lo que cae." }]
    };

    async function importLegacyExams() {
        if (!confirm("쮼st치s seguro de importar los ex치menes antiguos?")) return;
        const button = document.getElementById('import-legacy-btn');
        (button as HTMLButtonElement).disabled = true;
        try {
            for (const [date, exams] of Object.entries(legacyExams)) {
                for (const exam of exams as any[]) {
                    await fetch('/api/calendar', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            type: 'exam', date, subject: exam.asignatura, classroom: exam.aula, details: exam.detalles, time: exam.hora
                        })
                    });
                }
            }
            alert("Ex치menes importados correctamente.");
            loadExams();
        } catch (e) {
            alert("Error al importar.");
        } finally {
            (button as HTMLButtonElement).disabled = false;
        }
    }

    document.addEventListener('DOMContentLoaded', () => {
        initQuill();
        loadExams();
        document.getElementById('exam-form')?.addEventListener('submit', handleFormSubmit);
        document.getElementById('cancel-exam-edit')?.addEventListener('click', resetExamsForm);
        document.getElementById('prev-month-exams')?.addEventListener('click', () => { currentDate.setMonth(currentDate.getMonth() - 1); renderCalendar(); });
        document.getElementById('next-month-exams')?.addEventListener('click', () => { currentDate.setMonth(currentDate.getMonth() + 1); renderCalendar(); });
        document.getElementById('import-legacy-btn')?.addEventListener('click', importLegacyExams);

        document.getElementById('bar-edit-btn-exams')?.addEventListener('click', () => {
            if (selectedId) (window as any).editExamItem(selectedId);
        });
        document.getElementById('bar-delete-btn-exams')?.addEventListener('click', () => {
            if (selectedId) deleteExamItem(selectedId);
        });
        document.getElementById('bar-close-btn-exams')?.addEventListener('click', closeMobileActionBar);
    });
</script>