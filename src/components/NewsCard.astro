---
import type { NewsItem } from "../data/news";

interface Props {
    item: NewsItem;
}

const { item } = Astro.props;
---

<article class="news-card">
    <div class="card-image">
        <img src={import.meta.env.BASE_URL +item.image} alt={item.title} />
    </div>
    <div class="card-content">
        <span class="card-date">{item.date}</span>
        <h3 class="card-title">{item.title}</h3>
        <p class="card-description">{item.description}</p>
        <a href={item.link} class="card-link">
            Leer m√°s <i class="fa-solid fa-arrow-right"></i>
        </a>
    </div>
</article>

<style>
    .news-card {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .news-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    }

    .card-image {
        height: 200px;
        overflow: hidden;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .news-card:hover .card-image img {
        transform: scale(1.05);
    }

    .card-content {
        padding: 24px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .card-date {
        font-size: 0.875rem;
        color: #6b7280;
        margin-bottom: 8px;
        display: block;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 12px;
        line-height: 1.4;
    }

    .card-description {
        color: #4b5563;
        font-size: 0.95rem;
        margin-bottom: 20px;
        line-height: 1.6;
        flex-grow: 1;
    }

    .card-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #003d99;
        font-weight: 600;
        text-decoration: none;
        transition: gap 0.3s ease;
    }

    .card-link:hover {
        gap: 12px;
    }

    .card-link i {
        font-size: 0.9em;
    }
</style>
