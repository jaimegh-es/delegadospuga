// Funci칩n para generar los d칤as del mes
function generarDiasMes(a침o, mes) {
    const diasEnMes = new Date(a침o, mes, 0).getDate();
    const primerDia = new Date(a침o, mes - 1, 1).getDay();
    const espaciosVacios = primerDia === 0 ? 6 : primerDia - 1;

    const dias = [];

    // D칤as vac칤os
    for (let i = 0; i < espaciosVacios; i++) {
        dias.push({ vacio: true });
    }

    // D칤as del mes
    for (let dia = 1; dia <= diasEnMes; dia++) {
        const fecha = `${a침o}-${mes.toString().padStart(2, "0")}-${dia.toString().padStart(2, "0")}`;
        const examen = examenes[fecha];

        dias.push({
            numero: dia,
            fecha: fecha,
            examen: examen || null,
            vacio: false,
        });
    }

    // Completar la 칰ltima semana si es necesario
    while (dias.length % 7 !== 0) {
        dias.push({ vacio: true });
    }

    return dias;
}

// Generar calendarios para cada mes

const enero = generarDiasMes(2026, 1);
