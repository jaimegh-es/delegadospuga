<script>
  // Client-side Logic
  const loginSection = document.getElementById('login-section');
  const dashboardSection = document.getElementById('dashboard-section');
  const loginForm = document.getElementById('login-form');
  const passwordInput = document.getElementById('password');
  const errorMsg = document.getElementById('error-msg');
  const logoutBtn = document.getElementById('logout-btn');

  // Using the same env var from before
  const CORRECT_PASSWORD = import.meta.env.PUBLIC_QA_PASSWORD; 
  const SESSION_KEY = 'wall_access_token';

  function showDashboard() {
    loginSection.classList.add('hidden');
    dashboardSection.classList.remove('hidden');
  }

  function showLogin() {
    dashboardSection.classList.add('hidden');
    loginSection.classList.remove('hidden');
    if (passwordInput) passwordInput.value = '';
    if (errorMsg) errorMsg.classList.add('hidden');
  }

  // Check login status on load
  if (localStorage.getItem(SESSION_KEY) === 'granted') {
    showDashboard();
  }

  loginForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    if (passwordInput.value === CORRECT_PASSWORD) {
      localStorage.setItem(SESSION_KEY, 'granted');
      showDashboard();
    } else {
      errorMsg.classList.remove('hidden');
      passwordInput.classList.add('input-error');
      // Simple shake effect via CSS class or animation could go here
      setTimeout(() => passwordInput.classList.remove('input-error'), 500);
    }
  });

  logoutBtn?.addEventListener('click', () => {
    localStorage.removeItem(SESSION_KEY);
    showLogin();
  });
</script>

<style>
  /* Scoped CSS to match project theme */
  .wall-container {
    min-height: 100vh;
    padding: 120px 20px 60px; /* Top padding for fixed navbar */
    background: #f8fafc;
    display: flex;
    justify-content: center;
  }

  .content-wrapper {
    width: 100%;
    max-width: 800px;
  }

  .page-title {
    text-align: center;
    color: #2000ad;
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 3rem;
  }

  .hidden {
    display: none !important;
  }

  /* Card Styles */
  .card {
    background: white;
    border-radius: 16px;
    padding: 3rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    max-width: 450px;
    margin: 0 auto;
    text-align: center;
  }

  .icon-header {
    width: 60px;
    height: 60px;
    background: #eef2ff;
    color: #2000ad;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    margin: 0 auto 1.5rem;
  }

  .card-title {
    font-size: 1.5rem;
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .card-desc {
    color: #6b7280;
    margin-bottom: 2rem;
  }

  /* Form Styles */
  .login-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-input {
    width: 100%;
    padding: 0.875rem 1rem;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    font-size: 1rem;
    transition: all 0.2s;
    outline: none;
  }

  .form-input:focus {
    border-color: #2000ad;
    box-shadow: 0 0 0 4px rgba(32, 0, 173, 0.1);
  }

  .input-error {
    border-color: #ef4444;
    animation: shake 0.5s cubic-bezier(.36,.07,.19,.97) both;
  }

  .error-msg {
    color: #ef4444;
    font-size: 0.875rem;
    margin-top: 0.5rem;
    text-align: left;
  }

  .btn-submit {
    background: #2000ad;
    color: white;
    padding: 0.875rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    border: none;
    cursor: pointer;
    transition: background 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .btn-submit:hover {
    background: #1a008c;
  }

  /* Dashboard Styles */
  .welcome-banner {
    background: linear-gradient(135deg, #2000ad 0%, #3b82f6 100%);
    color: white;
    padding: 2rem;
    border-radius: 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    box-shadow: 0 10px 20px rgba(32, 0, 173, 0.2);
  }

  .welcome-text h3 {
    font-size: 1.5rem;
    margin-bottom: 0.25rem;
  }

  .btn-logout {
    background: rgba(255,255,255,0.2);
    color: white;
    border: 1px solid rgba(255,255,255,0.4);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-logout:hover {
    background: rgba(255,255,255,0.3);
  }

  .grid-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .grid-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s, box-shadow 0.2s;
    border: 1px solid #e5e7eb;
    display: block;
  }

  .grid-card:hover:not(.disabled) {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.05);
    border-color: #2000ad;
  }

  .card-icon {
    width: 48px;
    height: 48px;
    background: #f0fdf4;
    color: #16a34a;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .grid-card:nth-child(2) .card-icon {
    background: #eff6ff;
    color: #2563eb;
  }

  .grid-card:nth-child(3) .card-icon {
    background: #fff1f2;
    color: #e11d48;
  }

  .grid-card.disabled {
    opacity: 0.6;
    cursor: not-allowed;
    background: #f9fafb;
  }

  .grid-card h3 {
    color: #1f2937;
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .grid-card p {
    color: #6b7280;
    font-size: 0.9rem;
    line-height: 1.4;
  }

  @keyframes shake {
    10%, 90% { transform: translate3d(-1px, 0, 0); }
    20%, 80% { transform: translate3d(2px, 0, 0); }
    30%, 50%, 70% { transform: translate3d(-4px, 0, 0); }
    40%, 60% { transform: translate3d(4px, 0, 0); }
  }

  @media (max-width: 640px) {
    .welcome-banner {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }
  }
</style>
