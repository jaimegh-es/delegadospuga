---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import AbsenceForm from '../../components/AbsenceForm.astro';

const user = Astro.locals;
if (user.role !== 'admin') {
  return Astro.redirect('/dashboard');
}
---

<DashboardLayout title="Reportar Ausencia" currentPath="/dashboard/report">
    <div class="max-w-2xl mx-auto">
        <AbsenceForm />
    </div>
</DashboardLayout>
