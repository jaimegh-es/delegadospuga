---
import Layout from '../layouts/Layout.astro';
import { auth } from '../lib/firebase/server';

const sessionCookie = Astro.cookies.get('session')?.value;
if (sessionCookie) {
  try {
    await auth.verifySessionCookie(sessionCookie);
    return Astro.redirect('/dashboard');
  } catch (e) {
    // Session invalid, stay on login
  }
}
---

<Layout title="Iniciar Sesión | 1Bach Dashboard">
  <div class="login-container">
    <div class="login-card">
      <div class="card-header">
        <div class="logo-circle">
            <img src="/favicon.svg" alt="Logo" />
        </div>
        <h1>Intranet alumnos</h1>
        <p>Acceso para compañeros</p>
      </div>
      
      <div class="card-body">
        <button id="google-signin" class="google-btn">
          <div class="google-icon-wrapper">
            <svg viewBox="0 0 24 24">
                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
            </svg>
          </div>
          <span class="btn-text">Continuar con Google</span>
        </button>

        <div id="loading-spinner" class="spinner hidden"></div>
        <p id="error-message" class="error-msg hidden"></p>
      </div>

      <div class="card-footer">
        <a href="/" class="back-link">
             Volver al inicio
        </a>
      </div>
    </div>
  </div>
</Layout>

<style>
  .login-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #ffffff;
    padding: 20px;
  }

  .login-card {
    background: white;
    width: 100%;
    max-width: 400px;
    border-radius: 24px;
    padding: 40px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    border: 1px solid #f3f4f6;
    animation: slideUp 0.5s ease-out;
  }

  @keyframes slideUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .card-header {
    text-align: center;
    margin-bottom: 32px;
  }

  .logo-circle {
    width: 64px;
    height: 64px;
    background: #f3f4f6;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 16px;
    overflow: hidden; /* Asegura que nada salga del círculo */
  }

  .logo-circle img {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }

  .card-header h1 {
    font-size: 1.5rem;
    font-weight: 800;
    color: #111827;
    margin-bottom: 8px;
  }

  .card-header p {
    color: #6b7280;
    font-size: 0.875rem;
  }

  .google-btn {
    width: 100%;
    display: flex;
    align-items: center;
    background: #ffffff;
    border: 1px solid #d1d5db;
    border-radius: 12px;
    padding: 2px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .google-btn:hover {
    background: #f9fafb;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transform: translateY(-1px);
  }

  .google-icon-wrapper {
    padding: 10px;
  }

  .google-icon-wrapper svg {
    width: 20px;
    height: 20px;
  }

  .btn-text {
    flex-grow: 1;
    text-align: center;
    font-weight: 600;
    color: #374151;
    margin-right: 40px;
  }

  .error-msg {
    margin-top: 16px;
    color: #ef4444;
    font-size: 0.875rem;
    text-align: center;
    background: #fef2f2;
    padding: 8px;
    border-radius: 8px;
  }

  .card-footer {
    margin-top: 32px;
    padding-top: 24px;
    border-top: 1px solid #f3f4f6;
    text-align: center;
  }

  .back-link {
    color: #6b7280;
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .back-link:hover {
    color: #2000ad;
  }

  .spinner {
    width: 24px;
    height: 24px;
    border: 3px solid #f3f4f6;
    border-top: 3px solid #2000ad;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 16px auto 0;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .hidden { display: none; }
</style>

<script>
  import { auth, googleProvider } from "../lib/firebase/client";
  import { signInWithPopup } from "firebase/auth";

  const button = document.getElementById("google-signin");
  const errorMessage = document.getElementById("error-message");
  const spinner = document.getElementById("loading-spinner");

  button?.addEventListener("click", async () => {
    try {
      errorMessage?.classList.add("hidden");
      spinner?.classList.remove("hidden");
      if (button instanceof HTMLButtonElement) {
        button.style.pointerEvents = "none";
        button.style.opacity = "0.7";
      }

      const userCredential = await signInWithPopup(auth, googleProvider);
      const idToken = await userCredential.user.getIdToken();

      const response = await fetch("/api/auth/signin", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ idToken }),
      });

      if (response.ok) {
        window.location.assign("/dashboard");
      } else {
        throw new Error("Error en el servidor");
      }
    } catch (error: any) {
      console.error(error);
      if (errorMessage) {
        errorMessage.textContent = "Error al iniciar sesión. Inténtalo de nuevo.";
        errorMessage.classList.remove("hidden");
      }
      spinner?.classList.add("hidden");
      if (button instanceof HTMLButtonElement) {
        button.style.pointerEvents = "auto";
        button.style.opacity = "1";
      }
    }
  });
</script>
